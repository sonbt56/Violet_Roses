<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_up" />

    <LinearLayout
        android:id="@+id/quick_access_background"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/quickview_background"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="40dp"
        android:paddingTop="19dp" >

        <Button
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_dialod"
            android:text="On Your Wall" />

        <Button
            android:id="@+id/button1"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_dialod"
            android:text="To Choosen One" />

        <Button
            android:id="@+id/button2"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_dialod"
            android:text="On Your Page" />

    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_arraw_down" />

</LinearLayout>