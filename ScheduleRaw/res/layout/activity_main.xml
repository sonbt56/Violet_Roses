<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_background_5"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="#00ffffff"
            android:clickable="false"
            android:text=" "/>

        <Button
            android:id="@+id/imageButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:drawableLeft="@android:drawable/btn_star"
            android:gravity="left|center"
            android:onClick="OnFirstItemClick"
            android:text="  HOT Photos"
            android:textColor="#245137"
            android:textSize="22dp" />

		<FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="#535565"/>

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:drawableLeft="@android:drawable/btn_star"
            android:gravity="left|center"
            android:onClick="OnItemClick"
            android:text="  Cataloge"
            android:textColor="#245137"
            android:textSize="22sp" />

        <FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="#535565"/>

        <Button
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:drawableLeft="@android:drawable/ic_dialog_dialer"
            android:gravity="left|center"
            android:onClick="OnItemClick"
            android:text="  My Photo"
            android:textColor="#245137"
            android:textSize="22dp" />

        <FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="#535565"/>

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:drawableLeft="@android:drawable/star_on"
            android:gravity="left|center"
            android:onClick="OnItemClick"
            android:text="  Setting"
            android:textColor="#245137"
            android:textSize="22dp" />

    </LinearLayout>

</RelativeLayout>